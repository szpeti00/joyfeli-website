<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <!-- Meta Description -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://www.joyfelicoaching.nl">
  <meta name="description" content="JoyFeli - Lifestyle coaching & Personal Training in Wageningen">
  <meta name="keywords" content="Lifestyle coaching, Personal Training, Wageningen, coaching, fitness, training">
  <meta property="og:title" content="JoyFeli - Lifestyle coaching & Personal Training">
  <meta property="og:description" content="JoyFeli - Lifestyle coaching & Personal Training in Wageningen">

  <!-- Favicon -->
  <link rel="icon" href="/img/favicon/favicon.ico" type="image/x-icon">
  <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="192x192" href="/img/favicon/android-chrome-192x192.png">
  <link rel="manifest" href="/img/favicon/site.webmanifest">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">

</head>
<body>
  
  <!-- Navbar with Offcanvas for Small Screens -->
  <nav class="navbar navbar-expand-xl {{ navbarClass | default('sticky-top') }}">
    <div class="container-fluid">
      <a class="navbar-brand mx-3" href={{ links.home[locale] }}>
        <img src="/img/logo.png" alt="JoyFeli" class="navbar-logo">
      </a>
      <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>
      </button>

      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" data-bs-backdrop="false" aria-labelledby="offcanvasNavbarLabel">
       {% include "../partials/navigation.njk" %}
      </div>
    </div>
  </nav>
  <!-- End Navbar -->
    <main>
    {{ content | safe}} 
    </main>


  <!-- Footer -->
  <footer class="py-5 page-footer">
    <div class="container">
      <div class="row">
        <!-- Logo column -->
        <div class="col-lg-4 mb-3">
          <a href="{{ links.home[locale]}}">
            <img src="/img/only_drawing_logo.png" alt="JoyFeli" class="footer-logo">
          </a>
        </div>
        <!-- Sitemap column -->
        <div class="col-lg-4 mb-3">
          <ul class="list-unstyled">
           {% include "../partials/footer.njk" %}
          </ul>
        </div>
        <!-- Contact Info column -->
        <div class="col-lg-4 mb-3">
          <ul class="list-unstyled">
            <li class="mb-2 footer-link">
                {% include "icons/whatsapp-icon.njk" %}
                <a href="https://wa.me/{{ settings.phone }}" target="_blank" rel="noopener noreferrer">{{ settings.phoneText }}</a> 
            </li>
            <li class="mb-2 footer-link">
                {% include "icons/email-icon.njk" %}
                <a href="mailto:{{ settings.email }}">{{ settings.emailText }}</a>
            </li>
            <li class="mb-2 mt-3 footer-link">
              <a href="{{ links.terms[locale] }}">
              {% if locale == "nl" %}
              Algemene Voorwaarden
              {% else %}
              Terms and Conditions
              {% endif %}
              </a>
            </li>
            <li class="mb-2 footer-info">
              <p class="m-0">KvK-nummer: 95775137</p>
            </li>
            <li class="mb-2 footer-info">
              <p class="m-0">BTW-nummer: NL005173582B66</p>
            </li>
          </ul>
        </div>
      </div>
      <!-- Copyright -->
      <div class="text-center mt-3 small" id="copyright">
        <p>&copy; 2025 JoyFeli Coaching </p>
      </div>
    </div>
  </footer>
  <!-- End Footer -->

  <!-- Scroll to Top Button -->
  <button id="scrollToTopBtn" aria-label="Back to the top of the page.">
    <svg 
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6">
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m4.5 15.75 7.5-7.5 7.5 7.5"
        />
      </svg>
  </button>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!-- Hammer.js -->
  <script src="https://cdn.jsdelivr.net/npm/hammerjs@2.0.8/hammer.min.js"></script>
  <!-- JavaScript -->
  <script src="/js/script.js" defer></script>
</body>
</html>
